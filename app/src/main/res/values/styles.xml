    <style name="ToolbarTheme"  >
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
        <item name="background">@color/purple_500</item>
<!--        <item name="textColor">@color/white</item>-->
    </style>
    <!-- custom button -->
    <style name="regularBtn" >
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:padding">10sp</item>
    </style>

    <!-- custom button -->
    <style name="loginbtn" >
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/aclonica</item>
        <item name="android:padding">10sp</item>

    </style>

    <!-- login EditText -->
    <style name="loginRegisterEdittext"   parent="Widget.AppCompat.EditText">
<!--        <item name="android:background">#E1DEDE</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16sp</item>
        <item name="android:paddingBottom">16sp</item>
        <!-- seperate image drawable from text-->
        <item name="android:drawablePadding">8sp</item>
<!--        <item name="android:paddingRight">16sp</item>-->
    </style>

    <!-- custom input EditText -->
    <style name="inputEdittext"   parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
<!--        <item name="android:paddingBottom">8dp</item>-->
        <item name="android:layout_marginBottom">8sp</item>
    </style>





